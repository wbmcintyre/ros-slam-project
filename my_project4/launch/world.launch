<launch>
  

  <!-- World File -->
  <arg name="world_file" default="$(find my_project4)/world/officeWorld.world"/>

  <!-- Launch Gazebo World -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true" />
    <arg name="world_name" value="$(arg world_file)"/>
  </include>

  <!-- Robot pose   -->
  <arg name="x" default="3"/>
  <arg name="y" default="3"/>
  <arg name="z" default="0"/>
  <arg name="roll" default="0"/>
  <arg name="pitch" default="0"/>
  <arg name="yaw" default="0"/>

  <include file="$(find my_project4)/launch/robot_description.launch"/>
  <include file="$(find my_project4)/launch/amcl.launch"/>

  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find my_project4)/urdf/my_robot.xacro'"/>

  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" 
        args="-urdf -param robot_description -model my_robot 
              -x $(arg x) -y $(arg y) -z $(arg z)
              -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)"/>
 


  <!--launch rviz   -->	
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find my_project4)/rviz/AMCLproject.rviz"/>


</launch>
